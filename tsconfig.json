{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"rootDir": "src",
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"skipLibCheck": true,
		"outDir": "dist",
		"sourceMap": true,
		"removeComments": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true
	},
	"exclude": ["node_modules", "dist"]
}
